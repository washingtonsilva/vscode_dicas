{
  // ========================================
  // CONFIGURAÇÕES DE PRODUTIVIDADE
  // ========================================
  
  // Sugestões inline no editor
  "editor.inlineSuggest.enabled": true,
  
  // Inicialização
  "workbench.startupEditor": "readme",
  
  // Segurança - confirmar deleções
  "explorer.confirmDelete": true,

  // ========================================
  // GITHUB COPILOT
  // ========================================
  
  "github.copilot.enable": {
    "quarto": false,
    "*": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.nextEditSuggestions.enabled": true,

  // ========================================
  // CONFIGURAÇÕES DO R (OTIMIZADAS)
  // ========================================
  
  // Path do R (sua versão atual)
  "r.rpath.mac": "/Library/Frameworks/R.framework/Versions/4.5.1/Resources/bin",
  
  // Sistema de plots moderno
  "r.plot.useHttpgd": true,
  
  // Detalhamento de objetos
  "r.session.levelOfObjectDetail": "Detailed",
  
  // NOVAS: Configurações para sessão R persistente
  "r.alwaysUseActiveTerminal": true,    // Manter mesma sessão R
  "r.bracketedPaste": true,             // Colar código seguro
  "r.sessionWatcher": true,             // VS Code monitora R
  "r.rtermSendDelay": 0,               // Sem delay ao enviar código
  "r.rterm.option": [],                // Opções extras R (vazio por enquanto)

  // ========================================
  // JUPYTER E PYTHON
  // ========================================
  
  // Execução de seleção no editor interativo do Jupyter
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  
  // Python interpreter
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",

  // ========================================
  // ASSOCIAÇÕES DE ARQUIVOS
  // ========================================
  
  // CSV abre com Data Wrangler (mantido)
  "workbench.editorAssociations": {
    "file:/**/*.csv": "jupyter-data-wrangler"
  },
  
  // NOVA: Associações para R e Quarto
  "files.associations": {
    "*.R": "r",
    "*.qmd": "quarto"
  },

  // ========================================
  // GIT
  // ========================================
  
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "never",  // NOVA: Não procurar Git em pastas superiores

  // ========================================
  // APARÊNCIA
  // ========================================
  
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Tomorrow Night Blue",
  
  // Coloração de pares de colchetes
  "editor.bracketPairColorization.enabled": true,

  // ========================================
  // TERMINAL E JULIA
  // ========================================
  
  // Comando ignorado no terminal integrado (Julia)
  "terminal.integrated.commandsToSkipShell": [
    "language-julia.interrupt"
  ],
  
  // Julia
  "julia.symbolCacheDownload": true,
  "julia.enableTelemetry": true
}